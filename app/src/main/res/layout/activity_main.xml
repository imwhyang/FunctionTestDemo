<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入入参"
        android:minHeight="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_test_deadpig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="死猪"
        app:layout_constraintRight_toRightOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />
    <Button

        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="承保"
        app:layout_constraintRight_toRightOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/btn_test_deadpig" />

    <Button
        android:id="@+id/btn_claim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="理赔"
        app:layout_constraintRight_toRightOf="@id/btn_test"
        app:layout_constraintTop_toBottomOf="@id/btn_test" />

    <Button
        android:id="@+id/btn_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测体长"
        app:layout_constraintRight_toRightOf="@id/btn_claim"
        app:layout_constraintTop_toBottomOf="@id/btn_claim" />

    <ImageView
        android:id="@+id/iv_view"
        android:layout_width="200dp"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>